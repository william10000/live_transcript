<h1>Create a Room</h1>
<form action="<%= Routes.room_path(@conn, :create) %>" method="POST">
  <label for="name">Room Name:</label>
  <input type="text" name="name" required autofocus maxlength="25" autocomplete="off"><br>
  <input type="submit" value="Create">
  <input type="hidden" value="<%= Plug.CSRFProtection.get_csrf_token() %>" name="_csrf_token">
</form>
